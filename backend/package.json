{
    "name": "capital-ranker-backend",
    "version": "1.0.0",
    "description": "AI-powered VC deal flow optimization platform - Backend API",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/server.ts",
        "dev:watch": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "start:prod": "NODE_ENV=production node dist/server.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:integration": "jest --testPathPattern=integration",
        "migrate": "node scripts/migrate.js",
        "seed": "ts-node src/database/seed.ts",
        "clean": "rimraf dist",
        "validate": "npm run lint && npm run test"
    },
    "keywords": [
        "venture-capital",
        "ai",
        "machine-learning",
        "deal-flow",
        "investment",
        "startup-analysis"
    ],
    "author": "Capital Ranker Team",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "@slack/web-api": "^6.9.1",
        "@types/node-schedule": "^2.1.8",
        "axios": "^1.5.1",
        "bcrypt": "^5.1.1",
        "bullmq": "^5.65.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.0.1",
        "express-validator": "^7.0.1",
        "helmet": "^7.0.0",
        "ioredis": "^5.8.2",
        "joi": "^17.10.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.3",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "node-cron": "^3.0.2",
        "node-schedule": "^2.1.1",
        "nodemailer": "^6.9.6",
        "pdf-lib": "^1.17.1",
        "pdfkit": "^0.13.0",
        "rate-limit-redis": "^4.3.1",
        "rate-limiter-flexible": "^9.0.0",
        "redis": "^4.6.13",
        "winston": "^3.10.0",
        "winston-daily-rotate-file": "^4.7.1",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/bull": "^4.10.0",
        "@types/compression": "^1.7.3",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.5",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/morgan": "^1.9.5",
        "@types/multer": "^1.4.8",
        "@types/node": "^20.8.0",
        "@types/node-cron": "^3.0.8",
        "@types/nodemailer": "^6.4.11",
        "@types/rate-limit-redis": "^1.7.4",
        "@types/supertest": "^2.0.15",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    }
}
